{
	"core": {
		"filesExclude": ["./docs"]
	},
	"watch": {
		"rules": {
			"rx": {
				"files": ["rx/**/*"],
				"tasks": "cd rx && npm run build"
			},
			"glob": {
				"files": ["glob/**/*"],
				"tasks": "cd glob && npm run build"
			},
			"tgz": {
				"files": ["tgz/**/*"],
				"tasks": "cd tgz && npm run build"
			},
			"component": {
				"files": ["component/**/*"],
				"tasks": "cd component && npm run build"
			},
			"keyboard": {
				"files": ["keyboard/**/*"],
				"tasks": "cd keyboard && npm run build"
			}
		}
	}
}
